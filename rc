set nocompatible
"set viminfo='0,/30,:30,@30
set viminfo=
set nowrap
set nobackup
set lazyredraw
set tabstop=4
set shiftwidth=4
set scrolloff=3
set sidescrolloff=4
set ignorecase
set smartcase
set wildmenu
set incsearch
set hlsearch
set shortmess+=It
set nomore
set showcmd " 4 unix
set noswapfile
set su+=.class,.exe,.jar,.zip,.gz,.tar,.7z,.dll
set su-=.h
set nomodeline
set virtualedit=block
set textwidth=75
set complete+=t,k
set dictionary+=dictionary
set include=^\\s*#\\s*include\ \\(<\\(blitz\\\|boost\\)/\\)\\@!
set formatoptions-=tc
"set completeopt-=preview
set completeopt+=longest,menuone
"set autowrite
set hid
set confirm
set clipboard+=unnamed
set visualbell
set iskeyword+=.

if has("unix")
	set shell=bash
endif

if exists("+shellslash")
	set shellslash
endif

if !exists("allow_all_charset")
	set fileencodings=latin1
endif

cmap w!! %!sudo tee > /dev/null %

runtime bundle/pathogen/pathogen.vim
execute pathogen#infect()

let g:phpqa_messdetector_ruleset = "~/.phpmd.xml"
let g:phpqa_codesniffer_autorun = 0
let g:phpqa_codecoverage_autorun = 0
let g:phpqa_messdetector_autorun = 0


let g:buffergator_autoexpand_on_split = 0
let g:buffergator_sort_regime = "mru"
map <C-right> :BuffergatorOpen<ENTER>
map <C-left> :BuffergatorOpen<ENTER>
map <C-TAB> :BuffergatorOpen<ENTER>
map <C-S-TAB> :BuffergatorOpen<ENTER>



map <c-o> :CtrlP .<ENTER>

" vim-fugitive: auto open quickfix list after Glog
autocmd QuickFixCmdPost *grep* cwindow

" vim-rooter
autocmd BufRead *.rb,*.py,
          \*.html,*.haml,*.erb,
          \*.css,*.scss,*.sass,*.less,
          \*.js,*.rjs,*.coffee,
          \*.php,*.xml,*.yaml,
          \*.markdown,*.md
          \ :Rooter

map <F2> :syntax on \| filetype plugin on \| filetype detect<ENTER>


vmap <UP> gk
vmap <DOWN> gj
vmap <LEFT> h
vmap <RIGHT> l
vmap <END> $
vmap <HOME> ^

"imap <UP> <c-o>gk
"imap <DOWN> <c-o>gj

runtime bundle/mswin.vim

noremap <M-a> <c-a>
inoremap <M-a> <c-a>


if has("gui_running")
	runtime bundle/gvim-rc.vim
endif

